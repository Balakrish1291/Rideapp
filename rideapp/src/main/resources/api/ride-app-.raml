          to :
            type : string
            required: true
            example: "khammam"
          date:
            type : string
            required: true
            example: "10-04-2021"
          time:
            type : string
            required: true
            example: "10:10:09 AM"
          status:
            type : string 
            required : false
            example: "confirm/cancel"
    responses:
      200:
        body:
          application/json:
            example:
              {
                "status" : 200,
                "message" :"Cancel Booking"
              }
      400:
