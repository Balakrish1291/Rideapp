#%RAML 1.0
title: Ride App 
/registrations:
  post:
    body:
      application/json:
        type: object
        properties:
          customerName :
            type : string
            required: true
            example: "abcccdef"
          customerMobile :
            type: number
            required: true
            example: 9000054222
          customerAddress :
            type: string
            required: true
            example: "Hyderabad"
          customerEmailid :
            type: string
            required: true
            example: "abc@gmail.com"
          customerpassword :
            type: any
            required: true
            example: password@123
        example: !include Libraries/example.json

    responses:
      200:
        body:
          application/json:
            example:
              {
                "status" : 200,
                "message" :"SignUp Success"
              }
      400:
        body:
          application/json:
            example:  !include Libraries/common/Examples/Erro400-Response-Example.json
      401:
        body:
          application/json:
            example: !include Libraries/common/Examples/Error401-Response-Example.json
      404:
        body:
          application/json:
            example: !include Libraries/common/Examples/Error404-Response-Example.json
      500:
        body:
          application/json:
            example:
              {
                "status" : 500,
                "message" :"Critical Error"
              }

