/book:
  post:
    body:
      application/json:
        type: object
        properties:
          customerName :
            type : string
            required: true
            example: "Abchhd"
          from :
            type : string
            required: true
            example: "Hyderabad"
          to :
            type : string
            required: true
            example: "khammam"
          date:
            type : string
            required: true
            example: "10-04-2021"
          time:
            type : string
            required: true
            example: "10:10:09 AM"
          cost:
            type : string
            required: true
            example: "1000"
          coupon:
            type : string
            required: false
            example: "RIDE100"
          status:
            type : string 
            required : false
            example: "confirm/cancel"
    responses:
      200:
        body:
          application/json:
            example:
              {
                "status" : 200,
                "message" :"Booking Success"
              }
      400:
        body:
          application/json:
            example: !include /Libraries/common/Examples/Erro400-Response-Example.json
      401:
        body:
          application/json:
            example: !include /Libraries/common/Examples/Error401-Response-Example.json
      404:
        body:
          application/json:
            example: !include /Libraries/common/Examples/Error404-Response-Example.json
      500:
        body:
          application/json:
            example: !include /Libraries/common/Examples/Error500-Response-Example.json
                        

/cancel:
